{
  "name": "antigravity-live-preview",
  "displayName": "Antigravity Live Preview",
  "description": "Live preview extension for Antigravity & VS Code with multi-tab support",
  "version": "0.2.2",
  "publisher": "torsten-wich-heiter",
  "author": {
    "name": "Torsten Wich Heiter"
  },
  "license": "MIT",
  "homepage": "https://wichtel.art",
  "repository": {
    "type": "git",
    "url": "https://github.com/wichtels/antigravity_live_preview"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity.openPreview",
        "title": "Antigravity: Open Live Preview",
        "icon": "$(globe)"
      },
      {
        "command": "antigravity.refresh",
        "title": "Antigravity: Refresh Preview",
        "icon": "$(refresh)"
      },
      {
        "command": "antigravity.addTab",
        "title": "Antigravity: Add New Tab",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "antigravity.openPreview",
          "when": "editorLangId == html",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}